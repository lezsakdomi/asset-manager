style.
    table button {
        float: right;
        margin-left: 5px;
    }

    table {
        background: lightgray;
    }

    tr {
        background: #EEE;
    }

    tr:nth-child(2n) {
        background: whitesmoke;
    }

    li > div {
        display: block;
    }

    li {
        margin-bottom: 0.5em;
    }

main
    h1 KanyaRent users
    h2 Users in database
    table
        tr
            th Name
            th Email
            th Phone number
            th Address
            if systemUsers
                th Can log in
        each targetUser, targetUid in users
            tr
                mixin field(fieldName)
                    td
                        if fieldName in targetUser
                            span= targetUser[fieldName]
                        else
                            i none
                        if user && user.customClaims && user.customClaims.admin
                            a(href=`${targetUid}/edit/${fieldName}` + (targetUser[fieldName] ? `?previousValue=${encodeURIComponent(targetUser[fieldName])}` : ""))
                                button Edit
                +field('displayName')
                +field('email')
                +field('phoneNumber')
                +field('address')
                if systemUsers
                    td
                        if !systemUsers[targetUid]
